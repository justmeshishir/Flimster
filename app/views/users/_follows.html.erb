<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to 'Following', user_relationship_path(user.id,user.id), class: 'btn unfollow-button', remote: true, id: 'unfollow-button', method: :delete %>
  <% else %>
    <%= link_to 'Follow', user_relationships_path(user.id), class: 'btn follow-button', remote: true, id: 'follow-button', method: :post %>
  <% end %>
<% end %>