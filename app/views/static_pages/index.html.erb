
  <div class="col-xs-12 col-md-4">
    <h1 class="text-left">Find Movies</h1>

    <div class="row">
        <div class="movie-search">
          <form id="movie-search">
            <div class="col-xs-8">
              <input type="text" name="s" class="form-control" placeholder="Enter Movie Name">
            </div>
            <div class="col-xs-4">
              <button type="submit" class="btn btn-success">Submit</button>
            </div>
          </form>
        </div>
    </div>
    <div class="row">
        <br /><br />
        
        <div class="recent_reviews">
            <h1 class="text-left">Recent Reviews</h1>
            <% @recent_reviews.each do |review| %>
                <p class="comment"><%= review.comment %></p>
                -<%=link_to review.user.username.capitalize, user_path(review.user.id) %> in <%=link_to review.movie.title, movie_path(review.movie.id) %><br /><br />
            <hr />
            <% end %>
        </div>
    </div>
  </div>


  <div class="col-xs-12 col-md-8">
    <div id="movies" class="transitions-enabled">
      <% @movie.each do |m| %>
        <div class="box panel panel-default">
                <%= link_to movie_path(m.id) do %>
                   <%= image_tag m.poster, class:"reviewed-movies-img" %>
                <% end %>
                <div class="panel-body">
                  <span class="title"><%= m.title %></span><br />
                  <span><%= m.year %></span>
                </div>
        </div>
      <% end %>
    </div>
  </div>
